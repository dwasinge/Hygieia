#!/bin/sh

# enable maven so we can install the core JAR
source /opt/rh/rh-maven35/enable

# install core jar into local maven repo
mvn install:install-file -Dfile=/tmp/src/core-3.1.0-DW.jar -DgroupId=com.capitalone.dashboard -DartifactId=core -Dversion=3.1.0-DW -Dpackaging=jar -DlocalRepositoryPath=/tmp/artifacts/m2

# run default assemble to perform maven build
/usr/local/s2i/assemble
